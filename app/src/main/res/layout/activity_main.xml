<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teemo.my_calculator.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="66dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="148dp"
        android:layout_height="44dp"
        android:layout_marginLeft="187dp"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <Button
        android:id="@+id/one"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:text="1"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="238dp"
        android:onClick="onePressed"/>

    <Button
        android:id="@+id/two"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:text="2"
        android:layout_marginStart="110dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="238dp"
        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="twoPressed"/>

    <Button
        android:id="@+id/three"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="238dp"
        app:layout_constraintLeft_toRightOf="@+id/two"
        android:layout_marginLeft="0dp"
        android:onClick="threePressed"/>

    <Button
        android:id="@+id/four"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="4"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/one"
        android:onClick="fourPressed"/>

    <Button
        android:id="@+id/five"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="5"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/two"
        android:layout_marginLeft="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="fivePressed"/>

    <Button
        android:id="@+id/six"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="6"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/three"
        app:layout_constraintLeft_toRightOf="@+id/five"
        android:layout_marginLeft="0dp"
        android:onClick="sixPressed"/>

    <Button
        android:id="@+id/seven"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="7"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/four"
        android:onClick="sevenPressed"/>

    <Button
        android:id="@+id/eight"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="8"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/five"
        android:layout_marginLeft="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="eightPressed"/>

    <Button
        android:id="@+id/nine"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="9"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/six"
        app:layout_constraintLeft_toRightOf="@+id/eight"
        android:layout_marginLeft="0dp"
        android:onClick="ninePressed"/>

    <Button
        android:id="@+id/zero"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="0"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/seven"
        android:onClick="zeroPressed"/>

    <Button
        android:id="@+id/div"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="/"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/sub"
        app:layout_constraintLeft_toRightOf="@+id/nine"
        android:layout_marginLeft="0dp"
        android:onClick="divPressed"/>

    <Button
        android:id="@+id/dot"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:onClick="dotPressed"
        android:text="."
        app:layout_constraintLeft_toRightOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/eight" />

    <Button
        android:id="@+id/mult"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="*"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/div"
        app:layout_constraintLeft_toRightOf="@+id/equal"
        android:layout_marginLeft="-8dp"
        android:onClick="mulPressed"/>

    <Button
        android:id="@+id/equal"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:text="="
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/nine"
        app:layout_constraintLeft_toRightOf="@+id/dot"
        android:layout_marginLeft="0dp"
        android:onClick="equalPressed"/>

    <Button
        android:id="@+id/sub"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="-"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/plus"
        app:layout_constraintLeft_toRightOf="@+id/six"
        android:layout_marginLeft="0dp"
        android:onClick="subPressed"/>

    <Button
        android:id="@+id/plus"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:text="+"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="238dp"
        app:layout_constraintLeft_toRightOf="@+id/three"
        android:layout_marginLeft="0dp"
        android:onClick="plusPressed"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:text="Clear"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/result"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="clearPressed"/>

    <ImageView
        android:id="@+id/teemo"
        android:layout_width="125dp"
        android:layout_height="98dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="453dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/teemo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.135" />

</android.support.constraint.ConstraintLayout>
